<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.accelerometer.GaugeView
        android:id="@+id/GaugeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:agv_max_value="20"
        app:agv_min_value="0"
        app:agv_needle_color="#FF0000"
        app:agv_scale_color="#000000"
        app:agv_scale_divisions="20"
        app:agv_scale_end_angle="330"
        app:agv_scale_radius="120dp"
        app:agv_scale_start_angle="210"
        app:agv_value="0" />

    <TextView
        android:id="@+id/accelerationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00 m/s^2"
        android:textSize="150sp"
        android:textColor="#000000"
        android:layout_below="@id/GaugeView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/statistics_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Statistics" />



</RelativeLayout>