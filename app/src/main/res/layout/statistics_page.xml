<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StatisticsPageActivity">

    <TextView
        android:id="@+id/accelerationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistike o vozaču"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sortButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/filter" />


    <TextView
        android:id="@+id/selectedTimestampsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelerationTextView"
        android:layout_marginTop="48dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sortButton"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/highestAccelerationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Highest Acceleration: "
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/averageTotalAccelerationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Average Total Acceleration: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeAboveLimitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Time spent above limit: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberOfAggressiveAccelerationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Times when limit was breached: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberOfAggressiveBrakingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Times when limit was breached: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/typeOfDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Vrsta vozača: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Add more widgets to define the layout of the statistics page -->

    </LinearLayout>
</RelativeLayout>